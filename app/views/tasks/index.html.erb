<h1>タスク一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.list %></td>
      <td><%= task.detail %></td>
      <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
      <td><%= link_to "ブログを編集する", edit_task_path(task.id) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'タスクを登録する', new_task_path %>