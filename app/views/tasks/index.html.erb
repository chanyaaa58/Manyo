<h1>タスク一覧</h1>
<p><%= notice %></p>

<table>
  <%= form_with(scope: :search, url:tasks_path, method: :get,local: true)do |form| %>
  <tr>
    <th><%= form.label :タスク名 %></th>
    <td><%= form.text_field :list %></td>
    <th><%= form.label :ステータス %></th>
    <td><%= form.select :status, [["未着手", "未着手"], ["着手中", "着手中"], ["完了", "完了"]] %></td>
    <td><%= form.submit '検索' %></td>
  </tr>

  <% end %>
</table>


<%= link_to "終了期限が近い順で並び替え", tasks_path(sort_expired: "true") %>

<table>
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
    <th>作成日</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先順位</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr class = 'task_row'>
      <td><%= task.list %></td>
      <td><%= task.detail %></td>
      <td><%= l task.created_at %></td>
      <td><%= l task.expired_at %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>
      <td><%= link_to '詳細', task_path(task.id) %></td>
      <td><%= link_to '編集', edit_task_path(task.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to "タスクを登録する", new_task_path %>