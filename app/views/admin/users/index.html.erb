<h1>Manyoユーザー一覧</h1>

<table>
  <tr>
    <th>ユーザーID</th>
    <th>名前</th>
    <th>管理者権限</th>
    <th>投稿タスク数</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.admin %></td>
      <td><%= user.tasks.count %></td>
      <td><%= link_to '詳細', admin_user_path(user.id) %></td>
      <td><%= link_to '編集', edit_admin_user_path(user.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "新規ユーザー登録", new_admin_user_path %></p>

<%= paginate @users %>