<h1><%= @user.name %>のページ</h1>

<% if @user == current_user %>
  <%= link_to 'タスク登録', new_task_path %>
  <%= link_to 'プロフィール編集', edit_user_path %>
  <% end %>
</div>
<br>

<h2>プロフイール情報</h2>
<table>
  <tr>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>管理者権限</th>
  </tr>

  <tr>
    <td><%= @user.name %></td>
    <td><%= @user.email %></td>
    <td><%= @user.admin %></td>
  </tr>
</table>

<h2>タスク一覧</h2>
<table>
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
    <th>作成日</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先順位</th>
  </tr>

  <% @user.tasks.each do |task| %>
    <tr>
      <td><%= task.list %></td>
      <td><%= task.detail %></td>
      <td><%= task.created_at %></td>
      <td><%= task.expired_at %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>
      <td><%= link_to '詳細', task_path(task.id) %></td>
      <td><%= link_to '編集', edit_task_path(task.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'ユーザー一覧画面へ戻る', admin_users_path %>